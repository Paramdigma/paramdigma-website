{
  "name": "paramdigma-website",
  "version": "1.0.0",
  "description": "Paramdigma.com website package",
  "main": "assets/js/main.js",
  "scripts": {
    
    "watch-css": "sass --watch assets/css/main.scss assets/css/main.css",
    "build-css": "sass assets/css/main.scss assets/css/main.css",

    "watch-js": "watchify assets/js/main.js -o assets/js/bundle.js",
    "build-js": "browserify assets/js/main.js -o assets/js/bundle.js",

    "watch": "npm run watch-css && npm run watch-js",
    "build": "npm run build-css && npm run build-js"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Paramdigma/paramdigma-website.git"
  },
  "author": "Alan Rynne",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Paramdigma/paramdigma-website/issues"
  },
  "homepage": "https://github.com/Paramdigma/paramdigma-website#readme",
  "dependencies": {
    "bulma": "^0.7.2",
    "particles.js": "^2.0.0",
    "three": "^0.125.0"
  }
}
